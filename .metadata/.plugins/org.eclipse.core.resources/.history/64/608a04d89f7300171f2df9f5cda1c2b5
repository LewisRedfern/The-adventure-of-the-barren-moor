
public class Enemy extends GameObject{

	private String message;
	
	public Enemy(String type, int behaviour, String message) {
		super(type, behaviour);
		this.message = message;
	}
	
public void setType () {
		
		this.type = Treasure.class.getName().toString();
	}
	
	public String getType () {
		
		return this.type;
	}
	
	public void setBehaviour () {
		
		this.behaviour = 1;//takes life
	}
	
	public int getBehaviour () {
		
		return this.behaviour;
	}
	
	public void setMessage () {
		
		this.message = "From the pits of the swamp a dark force emerges and steals your health point!\n\n-1 Health Point.";
	}
	
	public String getMessage () {
		
		return this.message;
	}
	

}
